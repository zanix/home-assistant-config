---
# Downloads the last video from Ring.
#
alias: "[Ring] Download Last Video"
trigger:
  platform: template
  value_template: "{{ is_state_attr('sensor.doorbell_last_motion', 'recording_status', 'ready') }}"
action:
  service: downloader.download_file
  data_template:
    url: "{{ camera.doorbell.attributes.video_url }}"
    filename: latest.mp4
    overwrite: true
