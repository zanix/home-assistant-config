---
say_google:
  alias: 'Say Google'
  description: 'Text-to-speech using Google Wavenet.'
  icon: mdi:text-to-speech
  mode: parallel

  fields:
    media_player:
      name: 'Media Player'
      example: media_player.living_room_speaker
      required: true
      selector:
        entity:
          domain: media_player
    message:
      description: 'Message'
      example: 'Message text'
      required: true
      selector:
        text:

  sequence:
    choose:
      conditions:
        - condition: template
          value_template: '{{ message is not undefined }}'
      sequence:
        - service: tts.google_cloud
          data:
            entity_id: '{{ media_player }}'
            message: '{{ message|striptags }}'
